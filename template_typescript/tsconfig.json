{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "build/dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "./dist",
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "exclude": ["/**/node_modules/**/*"],
  "include": ["./src/**/*.ts"]
}
